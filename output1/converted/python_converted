class DiscountCalculator:
    @staticmethod
    def calculateDiscount(amount: float, customerType: str) -> float:
        discount = 0.0

        # Customer-based discount
        if customerType.lower() == "premium":
            discount = 0.20
        elif customerType.lower() == "standard":
            discount = 0.10

        # High-value purchase additional discount
        if amount > 10000:
            discount += 0.05

        finalAmount = amount - (amount * discount)

        # Final amount should never be negative
        if finalAmount < 0:
            finalAmount = 0

        return finalAmount

if __name__ == "__main__":
    print(DiscountCalculator.calculateDiscount(5000, "PREMIUM"))    # 4000
    print(DiscountCalculator.calculateDiscount(15000, "STANDARD"))  # 12750
    print(DiscountCalculator.calculateDiscount(2000, "UNKNOWN"))    # 2000
