class DiscountCalculator:

    @staticmethod
    def calculate_discount(amount: float, customer_type: str) -> float:
        discount = 0.0

        # Customer-based discount
        if customer_type.lower() == "premium":
            discount = 0.20
        elif customer_type.lower() == "standard":
            discount = 0.10

        # High-value purchase additional discount
        if amount > 10000:
            discount += 0.05

        final_amount = amount - (amount * discount)

        # Final amount should never be negative
        if final_amount < 0:
            final_amount = 0

        return final_amount

if __name__ == "__main__":
    print(DiscountCalculator.calculate_discount(5000, "PREMIUM"))    # 4000
    print(DiscountCalculator.calculate_discount(15000, "STANDARD"))  # 12750
    print(DiscountCalculator.calculate_discount(2000, "UNKNOWN"))    # 2000
